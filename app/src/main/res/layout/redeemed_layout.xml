<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#C0C0C0"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/topFrag"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/imgVendorsLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/coffee_cafe_logo"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@id/topFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtRewardType"
            android:layout_centerHorizontal="true"
            android:text="Pastry"
            android:textSize="40sp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:layout_below="@+id/txtRewardType"
            android:src="@drawable/free_stam"
            android:layout_centerHorizontal="true"
            android:id="@+id/imgStamped"
            android:layout_width="200dp"
            android:layout_height="150dp" />

        <Button
            android:text="Close"
            android:background="#EB6100"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:layout_below="@+id/imgStamped"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />







    </RelativeLayout>

</RelativeLayout>