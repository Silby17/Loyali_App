<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="145dp"
    android:padding="6dip">


    <RelativeLayout
        android:id="@+id/fragDetails"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_toRightOf="@+id/vendorLogoFrag">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:text=""
            android:id="@+id/txtViewVendorName"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:id="@+id/txtViewVendorLocation"
            android:textColor="@android:color/black"
            android:text=""
            android:textSize="15dp"
            android:layout_below="@+id/txtVendorType"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:id="@+id/txtVendorPhone"
            android:textColor="@android:color/black"
            android:text=""
            android:textSize="15dp"
            android:layout_below="@+id/txtViewVendorLocation"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:id="@+id/txtVendorType"
            android:textColor="@android:color/black"
            android:text=""
            android:textSize="15dp"
            android:layout_below="@+id/txtViewVendorName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_toRightOf="@+id/fragDetails"
        android:layout_width="120dp"
        android:layout_height="120dp">

        <RelativeLayout
            android:id="@+id/reward1"
            android:layout_alignParentLeft="true"
            android:background="#b80102"
            android:layout_width="55dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/reward1Title"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Pastry"
                android:paddingTop="5dp"
                android:textColor="#ffffff"/>

            <TextView
                android:textSize="60sp"
                android:id="@+id/reward1Amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"
                android:text="5"/>

            <TextView
                android:id="@+id/reward1ClickToUse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="9sp"
                android:layout_alignParentBottom="true"
                android:text="(Click to use)"
                android:paddingBottom="5dp" />
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/reward2"
            android:layout_alignParentRight="true"
            android:background="#b80102"
            android:layout_width="55dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/reward2Title"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Pastry"
                android:paddingTop="5dp"
                android:textColor="#ffffff"/>

            <TextView
                android:textSize="60sp"
                android:id="@+id/reward2Amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"
                android:text="3"/>

            <TextView
                android:id="@+id/reward2ClickToUse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="9sp"
                android:layout_alignParentBottom="true"
                android:text="(Click to use)"
                android:paddingBottom="5dp" />


        </RelativeLayout>


    </RelativeLayout>





    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/vendorLogoFrag"
        android:layout_alignParentTop="true">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imgVendorLogo"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>



</RelativeLayout>