<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="265dp"
    android:padding="6dip">


    <RelativeLayout
        android:id="@+id/fragDetails"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_toRightOf="@+id/vendorLogoFrag">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:text=""
            android:textAlignment="center"
            android:id="@+id/txtViewVendorName"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:id="@+id/txtViewVendorLocation"
            android:textColor="@android:color/black"
            android:text=""
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_below="@+id/txtStoreType"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:id="@+id/txtViewPhone"
            android:textColor="@android:color/black"
            android:text=""
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_below="@+id/txtViewVendorLocation"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:id="@+id/txtStoreType"
            android:textColor="@android:color/black"
            android:text=""
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_below="@+id/txtViewVendorName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <View
        android:id="@+id/viewSeperator"
        android:layout_below="@+id/fragDetails"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#b80102"/>


    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/vendorLogoFrag"
        android:layout_alignParentTop="true">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imgVendorLogo"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/viewSeperator"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:id="@+id/card1Frag"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="#b80102"
            android:layout_width="150dp"
            android:layout_height="100dp">


            <TextView
                android:paddingTop="5dp"
                android:textColor="#ffffff"
                android:text="@string/coming_soon"
                android:textSize="15dp"
                android:textAlignment="center"
                android:id="@+id/txtCard1Header"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/txtCard1Count"
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:textAlignment="center"
                android:text="2/6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/txtCard1Header"/>


        </RelativeLayout>


        <RelativeLayout
            android:background="#b80102"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/card1Frag"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp">

            <TextView

                android:paddingTop="5dp"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textAlignment="center"
                android:text="@string/coming_soon"
                android:id="@+id/txtCard2Header"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentTop="true"/>


            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/txtCard2Count"
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:textAlignment="center"
                android:text="2/6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCard2Header"/>

        </RelativeLayout>


