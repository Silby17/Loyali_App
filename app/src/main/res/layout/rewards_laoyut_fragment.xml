<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="145dp"
    android:padding="6dip">


    <RelativeLayout
        android:id="@+id/fragDetails"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/vendorLogoFrag"
        android:layout_toEndOf="@+id/vendorLogoFrag">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:id="@+id/txtViewVendorName"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/txtVendorType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:paddingBottom="2dp"
            android:layout_below="@+id/txtViewVendorName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txtVendorPhone"
            android:layout_below="@+id/txtVendorType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/txtViewVendorLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:clickable="true"
            android:textSize="12dp"
            android:layout_below="@+id/txtVendorPhone"/>



        <TextView
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:text="(Click to use)"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewVendorLocation"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/fragDetails"
        android:layout_width="wrap_content"
        android:layout_height="125dp">

        <RelativeLayout
            android:background="@drawable/shadow_round"
            android:id="@+id/reward1"
            android:layout_toLeftOf="@+id/reward2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:background="@drawable/top_rounded_corners_red"
                android:id="@+id/reward1Title"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text=" None "
                android:textColor="#ffffff"/>

            <TextView
                android:textColor="@android:color/black"
                android:textSize="40sp"
                android:id="@+id/reward1Amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="-"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/reward2"
            android:background="@drawable/shadow_round"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:background="@drawable/top_rounded_corners_red"
                android:id="@+id/reward2Title"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text=" None "
                android:textColor="#ffffff"/>

            <TextView
                android:textSize="40sp"
                android:id="@+id/reward2Amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_centerInParent="true"
                android:text="-"/>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="1dp"
        android:layout_marginTop="7dp"
        android:layout_width="75dp"
        android:layout_height="70dp"
        android:id="@+id/vendorLogoFrag"
        android:layout_alignParentTop="true">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imgVendorLogo"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>
</RelativeLayout>