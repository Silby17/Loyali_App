<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shadow_round"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/topFrag"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/imgVendorsLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@id/topFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtRewardType"
            android:layout_centerHorizontal="true"
            android:text="-"
            android:textSize="40sp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/txtRewardType"
            android:src="@drawable/present_1"
            android:layout_centerHorizontal="true"
            android:id="@+id/imgStamped"
            android:layout_width="200dp"
            android:layout_height="150dp" />

        <Button
            android:id="@+id/btnClose"
            android:text="Close"
            android:background="@drawable/shadow_round_button"
            android:textSize="25sp"
            android:textColor="@android:color/black"
            android:layout_below="@+id/imgStamped"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>