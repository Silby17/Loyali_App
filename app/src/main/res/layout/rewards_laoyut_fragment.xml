<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="145dp"
    android:padding="6dip">


    <RelativeLayout
        android:id="@+id/fragDetails"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/vendorLogoFrag"
        android:layout_toEndOf="@+id/vendorLogoFrag">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:text=""
            android:id="@+id/txtViewVendorName"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtVendorPhone"
            android:textColor="@android:color/black"
            android:text=""
            android:textSize="15dp"
            android:layout_below="@+id/txtVendorType"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/txtViewVendorLocation"
            android:textColor="@android:color/black"
            android:text=""
            android:textSize="12dp"
            android:layout_below="@+id/txtVendorPhone"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:id="@+id/txtVendorType"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_below="@+id/txtViewVendorName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:text="(Click to use)"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewVendorLocation"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/fragDetails"
        android:layout_width="wrap_content"
        android:layout_height="125dp">

        <RelativeLayout
            android:id="@+id/reward1"
            android:layout_toLeftOf="@+id/reward2"
            android:background="#b80102"
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/reward1Title"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text=" None "
                android:textColor="#ffffff"/>

            <TextView
                android:textSize="50sp"
                android:id="@+id/reward1Amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"
                android:text="-"/>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/reward2"
            android:layout_alignParentRight="true"
            android:background="#EB6100"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/reward2Title"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text=" None "
                android:textColor="#ffffff"/>

            <TextView
                android:textSize="50sp"
                android:id="@+id/reward2Amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"
                android:text="-"/>




        </RelativeLayout>
    </RelativeLayout>





    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/vendorLogoFrag"
        android:layout_alignParentTop="true">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imgVendorLogo"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>



</RelativeLayout>