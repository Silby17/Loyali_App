<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:padding="6dip">

    <RelativeLayout
        android:layout_centerVertical="true"
        android:id="@+id/vendorLogoFrag"
        android:layout_marginLeft="5dp"
        android:layout_width="100dp"
        android:layout_height="100dp">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imgVendorLogo"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_toRightOf="@+id/vendorLogoFrag"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/reward1"
            android:background="@drawable/shadow_round"
            android:layout_width="110dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/reward1Title"
                android:background="@drawable/top_rounded_corners_red"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text=" None "
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/reward1Amount"
                android:layout_below="@+id/reward1Title"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/reward2"
            android:layout_toRightOf="@+id/reward1"
            android:background="@drawable/shadow_round"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/reward2Title"
                android:background="@drawable/top_rounded_corners_red"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text=" None "
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/reward2Amount"
                android:layout_below="@+id/reward2Title"
                android:textSize="30sp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="-"/>
        </RelativeLayout>





    </RelativeLayout>


</RelativeLayout>